generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  country     String
  description String
  name        String
  price       Int
  title       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  imageUrl String

  @@map("products")
}
